<Application x:Class="FinGoods.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cmd="clr-namespace:FinGoods.Commands"
             xmlns:local="clr-namespace:FinGoods"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Button.xaml"/>
                <ResourceDictionary Source="/Styles/DataGrid.xaml"/>
                <ResourceDictionary Source="/Styles/WindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <cmd:CloseWindowCommand x:Key="CloseWindowCommand"/>
            <cmd:CloseDialogCommand x:Key="CloseDialogCommand"/>
        </ResourceDictionary>

    </Application.Resources>
</Application>
